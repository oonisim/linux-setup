# This needs to be tempalted and moved to site.nginx
user  {{ nginx_user }};
pid /run/nginx.pid;

#
# This number should be, at maximum, the number of CPU cores on your system.
# (since nginx doesn't benefit from more than one worker per CPU.)
#
worker_processes  auto;  # "auto": try to autodetect it

#
# Number of file descriptors used for Nginx.
# This is set in the OS with 'ulimit -n 200000'
# or using /etc/security/limits.conf
#
worker_rlimit_nofile  {{ nginx_ulimit }};

#
# Determines how many clients will be served by each worker process.
#    (Max clients = worker_connections * worker_processes)
# In reverse proxy mode:
#    (Max clients = worker_connections * worker_processes / 2)
#
# "Max clients" is also limited by the number of socket connections
# available on the system (~64k)
#
events {
	worker_connections 768;
	# multi_accept on;
}

http {

	##
	# Basic Settings
	##

	sendfile on;
	tcp_nopush on;
	tcp_nodelay on;
	keepalive_timeout 65;
	types_hash_max_size 2048;
	# server_tokens off;

	# server_names_hash_bucket_size 64;
	# server_name_in_redirect off;

	include {{ nginx_conf_dir }}/mime.types;
	default_type application/octet-stream;

	##
	# SSL Settings
	##

	ssl_protocols TLSv1 TLSv1.1 TLSv1.2; # Dropping SSLv3, ref: POODLE
	ssl_prefer_server_ciphers on;

	##
	# Logging Settings
	##

	access_log /var/log/nginx/access.log;
	error_log /var/log/nginx/error.log;

	##
	# Gzip Settings
	##

	gzip on;
	gzip_disable "msie6";

	# gzip_vary on;
	# gzip_proxied any;
	# gzip_comp_level 6;
	# gzip_buffers 16 8k;
	# gzip_http_version 1.1;
	# gzip_types text/plain text/css application/json application/javascript text/xml application/xml application/xml+rss text/javascript;

	##
	# Virtual Host Configs
	##

	include {{ nginx_conf_dir }}/conf.d/*.conf;
	include {{ nginx_conf_dir }}/sites-enabled/*;
}


